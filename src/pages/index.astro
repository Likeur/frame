---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import "../styles/global.css";

const projects = [
	{
		title: "Gmail Redesign",
		description:
			"A modern, clean redesign of the Gmail interface focusing on readability and streamlined user experience.",
		image: "/assets/gmailredesign.png",
		liveUrl: "https://gmail-redesign-virid.vercel.app/",
		repoUrl: "https://github.com/Likeur/gmail_redesign",
		tags: ["React", "Tailwind UI", "Redesign"],
		date: "Jan 2026",
	},
	{
		title: "Shopy",
		description:
			"A minimalist e-commerce application featuring a clean product showcase and smooth shopping flow.",
		image: "/assets/shopy.png",
		liveUrl: "https://shopy-ten-mu.vercel.app/",
		repoUrl: "https://github.com/Likeur/shopy",
